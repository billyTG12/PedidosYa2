<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>


        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <!-- Estilo base para todos los TextView -->
    <style name="BaseTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Estilo específico para el título principal -->
    <style name="TitleTextView" parent="BaseTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Estilo para los TextView de contenido -->
    <style name="ContentTextView" parent="BaseTextView">
        <!-- Puedes agregar más atributos si es necesario -->
    </style>
    <style name="BaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <style name="ContentLabelTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Puedes añadir más atributos según necesites, como padding, margins, etc. -->
    </style>

</resources>