<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#FAFAFA">

    <!-- Nombre -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/textNombreLabel"
            style="@style/ContentLabelTextView"
            android:text="Nombre: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textNombre"
            style="@style/ContentTextView"
            android:text="Nombre de ejemplo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Ubicación -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/textUbicacionLabel"
            style="@style/ContentLabelTextView"
            android:text="Ubicación: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textUbicacion"
            style="@style/ContentTextView"
            android:text="Ubicación de ejemplo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Método de Pago -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/textMetodoPagoLabel"
            style="@style/ContentLabelTextView"
            android:text="Método de Pago: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textMetodoPago"
            style="@style/ContentTextView"
            android:text="Tarjeta de crédito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Total -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/textTotalLabel"
            style="@style/ContentLabelTextView"
            android:text="Total: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textTotal"
            style="@style/ContentTextView"
            android:text="$100.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Email -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/textEmailLabel"
            style="@style/ContentLabelTextView"
            android:text="Email: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textEmail"
            style="@style/ContentTextView"
            android:text="usuario@example.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Estado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textAtendidoLabel"
            style="@style/ContentLabelTextView"
            android:text="Estado: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textAtendido"
            style="@style/ContentTextView"
            android:text="En proceso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textProductosLabel"
            style="@style/ContentLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Productosa e entregar: "
             />
        <TextView
            android:id="@+id/textProductos"
            style="@style/ContentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Productos" />
    </LinearLayout>


    <!-- Botón Entregar Pedido -->
    <Button
        android:id="@+id/btnEntregarPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entregar Pedido"



        android:background="@drawable/rounded_listview_background"

        android:textColor="@android:color/white" />
</LinearLayout>