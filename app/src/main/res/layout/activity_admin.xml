<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@drawable/fondoadmin"
    tools:context=".AdminActivity">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:text="Inicio de Sesión como Administrador"
        android:textColor="#DA3434"
        android:textSize="28sp"
        android:layout_marginLeft="30sp"
        android:layout_gravity="center_horizontal" />


    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="202dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="76dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_username_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de usuario"
            android:drawableStart="@drawable/ic_outline_email_24"
            android:textColor="@color/black"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_password_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Contraseña"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:textColor="@color/black"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_login_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round_primary_bg"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Iniciar Sesión" />

    </LinearLayout>

</LinearLayout>
