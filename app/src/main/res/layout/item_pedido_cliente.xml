<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="@drawable/rounded_listview_background"
    android:layout_marginBottom="7dp"

    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5sp"
        android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/textNombreLabel"
            style="@style/ContentLabelTextView"
            android:text="Nombre: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/pedido_nombre_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ContentTextView"
            android:textColor="@color/colorInputText"
            android:text="Nombre del Usuario"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5sp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/textEmailLabel"
            style="@style/ContentLabelTextView"
            android:text="Email: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/pedido_email_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email del Usuario"
        android:textColor="@color/colorInputText"
        style="@style/ContentTextView" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5sp"
        android:layout_marginBottom="16dp">
        <TextView
            android:id="@+id/textUbicacionLabel"
            style="@style/ContentLabelTextView"
            android:text="Ubicación: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/pedido_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección"
        android:textColor="@color/colorInputText"
        style="@style/ContentTextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5sp"
        android:layout_marginBottom="4dp">
        <TextView
            android:id="@+id/textMetodoPagoLabel"
            style="@style/ContentLabelTextView"
            android:text="Método de Pago: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/pedido_metodo_pago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Método de Pago"
        android:textColor="@color/colorInputText"
        style="@style/ContentTextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5sp"
        android:layout_marginBottom="4dp">
        <TextView
            android:id="@+id/textTotalLabel"
            style="@style/ContentLabelTextView"
            android:text="Total: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/pedido_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textColor="@color/colorInputText"
        style="@style/ContentTextView" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5sp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textAtendidoLabel"
            style="@style/ContentLabelTextView"
            android:text="Estado: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/pedido_atendido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atendido"
        android:textColor="@color/colorInputText"
        style="@style/ContentTextView" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5sp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textProductosLabel"
            style="@style/ContentLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Productosa a entregar: ">

        </TextView>

    <TextView
        android:id="@+id/pedido_platos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atendido"
        android:textColor="@color/colorInputText"
        style="@style/ContentTextView" />
    </LinearLayout>
</LinearLayout>